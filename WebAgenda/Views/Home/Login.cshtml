@{
    ViewData["Title"] = "Login";
}
<h2 class="text-center" style="color:dodgerblue;font-size:25px">Faça login primeiro!</h2>

<div class="rounded d-flex justify-content-center">
    <div class="p-4">
        <form method="post">
            <div class="input-group mb-3">
                <span class="input-group-text bg-primary">
                    <i class="zmdi zmdi-account text-white"></i>
                </span>
                <input name="email" type="email" class="form-control" placeholder="Email">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text bg-primary">
                    <i class="zmdi zmdi-lock text-white"></i>
                </span>
                <input name="password" type="password" class="form-control" placeholder="Password">
            </div>
            <div class="d-grid col-12 mx-auto">
                <a class="btn btn-primary" asp-action="Login">Login</a>
            </div>
        </form>
    </div>
</div>